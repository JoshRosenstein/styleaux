{
  "name": "@styleaux/core",
  "version": "1.9.0-beta.0",
  "author": "Joshua Rosenstein",
  "license": "MIT",
  "source": "dist-src/index.js",
  "main": "dist-node/index.js",
  "module": "dist-web/index.js",
  "sideEffects": "false",
  "files": [
    "dist-*/",
    "assets/",
    "bin/"
  ],
  "scripts": {
    "build:src": "tsc -d --declarationDir ./dist-types --outDir ./dist-src",
    "build:bundles": "rollup -c",
    "build:types": "tsc -d --emitDeclarationOnly --declarationDir ./dist-node",
    "build": "yarn clean && yarn build:src && yarn build:bundles && yarn build:types",
    "clean": "rimraf dist-*/",
    "test": "jest",
    "watch": "yarn run build:src -w --preserveWatchOutput"
  },
  "dependencies": {
    "@roseys/futils": "^2.1.4",
    "typed-is": "^1.0.4",
    "warning": "^4.0.2"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.5",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-ts-standard-pkg": "^0.3.14",
    "@roseys/eslint-config": "^1.0.2",
    "@types/node": "^11.11.4",
    "cross-env": "^5.2.0",
    "@roseys/csstype": "^2.6.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.0",
    "tsargs": "^1.3.1",
    "typescript": "^3.3.3333",
    "typescript-test-utils": "^1.2.1"
  }
}
