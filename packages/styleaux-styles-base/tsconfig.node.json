{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es7", "es2015.iterable", "dom"],

    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,

    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,

    "sourceMap": true,
    "resolveJsonModule":true,
    "typeRoots": [
      "./node_modules/@types", "./typings"
    ]
  },
  "exclude": [
    "dist-*/",
    "node_modules",
    "__tests__",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
