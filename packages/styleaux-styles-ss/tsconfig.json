{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es7", "es2015.iterable", "dom"],
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist-*/",
    "node_modules",
    "__tests__",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
